<div class="row mt-30">
    <div class="col m12">
        <div class="card-panel grey lighten-5">
            <div class="row">
                <div class="col m8">
                    <h3 class="black-text">{{userStories.title}}</h3>
                </div>
                <div class="col m4 ">
                    <p class="text-right">{{formatDate userStories.createdAt 'Do MMMM YYYY'}}</p>
                </div>
            </div>
            <div class="slider">
                <ul class="slides">
                {{#each travelImage}}
                    <li>
                        <img src="data:{{contentType}};base64,{{imageBase64}}"> 
                    </li>
                {{/each}}
                </ul>
            </div>
            <p class="flow-text">
                {{stripTags userStories.desc}}
            </p>
            <div class="row">
                <div class="col m12">
                    <p class="author">Story By: <a
                            href="/stories/user/{{userStories.user._id}}">{{userStories.user.displayName}}</a></p>
                </div>
            </div>
        </div>
    </div>
</div>